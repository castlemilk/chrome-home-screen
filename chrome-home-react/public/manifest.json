{
  "manifest_version": 3,
  "name": "Chrome Home - Beautiful New Tab",
  "short_name": "Chrome Home",
  "version": "1.0.0",
  "description": "Beautiful new tab page with customizable widgets and NASA space backgrounds",
  "author": "Ben Ebsworth",
  "homepage_url": "https://github.com/yourusername/chrome-home-extension",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_title": "Chrome Home Extension",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "search"],
  "host_permissions": [
    "https://query1.finance.yahoo.com/*",
    "https://query2.finance.yahoo.com/*",
    "https://wttr.in/*",
    "https://geocoding-api.open-meteo.com/*",
    "http://localhost:8080/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "offline_enabled": true,
  "minimum_chrome_version": "88"
}